<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/white"
    tools:context="com.assignment.spotabee.fragments.DonationLogin">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/CurrencyTxt"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:padding="@dimen/default_text_padding"
        android:text="Help Spot a Bee by making a donation to support our research"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="@dimen/default_heading_size" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/CurrencyTxt"
        android:layout_marginTop="96dp"
        android:minHeight="100dp"
        android:minWidth="336dp"
        android:src="@drawable/ic_bee_flying" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/editAmount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/default_text_view_margin"
        android:layout_marginRight="@dimen/default_text_view_margin"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="61dp"
        android:background="@drawable/grey_text_input_background"
        android:elevation="@dimen/default_elevation"
        android:hint="Donation amount"
        android:textAlignment="center"
        android:translationZ="@dimen/default_translation_z" />

    <RelativeLayout
        android:id="@+id/payPalButtonContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:elevation="@dimen/default_elevation"
        android:translationZ="@dimen/default_translation_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </RelativeLayout>

</RelativeLayout>

