<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/goToYoutube"
                android:layout_marginTop="70dp"
                android:layout_below="@+id/einsteinQuote"
                android:layout_centerHorizontal="true"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="190dp"
                android:layout_height="80dp"
                android:background="@drawable/button_background"
                android:text="@string/go_to_youtube_to_see_our_mission"
                android:textColor="@color/button_text_color"
                android:textAllCaps="false"
                android:textSize="@dimen/default_small_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.891" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/einsteinQuote"
                android:layout_width="330dp"
                android:layout_height="300dp"
                android:background="@null"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:scrollbars="vertical"
                android:text="@string/einstein_quote"
                android:textAlignment="center"
                android:textSize="@dimen/deafult_medium_text_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>