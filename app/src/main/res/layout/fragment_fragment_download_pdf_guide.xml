<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.assignment.spotabee.fragments.FragmentDownloadPdfGuide">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/logoContainer"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="59dp"
                    android:src="@drawable/ic_bee_flying" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/guideTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="18dp"
                    android:padding="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/help_the_bees_more"
                    android:textAllCaps="false"
                    android:textSize="@dimen/deafult_medium_text_size" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/download_pdf_bee"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_below="@+id/logoContainer"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:src="@drawable/bee_2" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/download_pdf_bee"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:background="@android:drawable/dialog_holo_light_frame">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/downloadGuideBtn"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button_background"
                    android:text="@string/download_guide"

                    android:textAllCaps="false"
                    android:textColor="@color/button_text_color"
                    android:textSize="@dimen/default_small_text_size" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>




</RelativeLayout>

